@model IEnumerable<Livraria.AppServices.ViewModel.LivroViewModel>

@{
    ViewData["Title"] = "Home Page";
}


<p>
    <a asp-action="Create" class="btn btn-primary">Novo cadastro</a>
</p>
<form asp-controller="Home" asp-action="Buscar"  method="post">
    <p>
        <div class="row">

            <div class="col-lg-12">

                <div class="row">
                    <div class="col-lg-3">
                        <input type="text" class="form-control" placeholder="Título" name="filtro" />
                    </div>
                    <div class="col-lg-9">
                        <input type="submit" />
                       
                    </div>
                </div>
            </div>
        </div>
    </p>

</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LivroId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publicacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paginas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editora)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LivroId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publicacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paginas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Editora)
                </td>

                <td>
                    @Html.ActionLink("Ver datalhes", "Details", new { id = item.LivroId }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.LivroId })
                </td>
            </tr>
        }
    </tbody>
</table>

 